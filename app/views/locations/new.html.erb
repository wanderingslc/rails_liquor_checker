<h1>Locations</h1>

<%= smart_listing_render(:locations) %>
<div class="well">
  <h3>Import new locations</h3>
  <h4>Some notes before importing.</h4>
  <ul>
    <li>
      The download from DABC does not include headers. You must put that in.
    </li>
    <li>
      Export to CSV format.
    </li>
    <li>
      Then upload.
    </li>
  </ul>
  </ul>
</div>
<%= form_tag import_locations_path, multipart: true do %>
    <div class="form-group">
      <%= file_field_tag :file %>
    </div>
    <div>
      <%= submit_tag "Import", class: "btn btn-default" %>
    </div>

<% end %>